package chapter18.exercices;

import java.util.Scanner;
public class Ex14
{
    public static void main(String[] args)
    {
        Scanner scan = new Scanner(System.in);

        System.out.print("Introduce a string for testing if it is a palindrome: ");
        String s = scan.nextLine();
        String[] array = s.split(" ");

        s = "";
        for (int i = 0; i < array.length; i++)
        {
            s += array[i];
        }
        System.out.println(testPalindrome(s, 1, s.length()));
    }

    public static Boolean testPalindrome(String s, int index, int len)
    {
        int length = s.length();
        System.out.println(s);
        System.out.println(length+" "+index);

        if (index == len / 2)
            return  true;

        if (s.charAt(0) == s.charAt(length - 1))
            return true &
                    testPalindrome(s.substring(1, length - 1), index + 1, len);
        else
            return false;
    }
}
